<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryVariant"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding"
        android:paddingTop="@dimen/padding">

        <ImageView
            android:id="@+id/return_back"
            style="@style/SettingsImageStyle"
            android:layout_gravity="start"
            android:src="@drawable/return_back"
            app:tint="?attr/colorSecondary" />

        <TextView
            style="@style/SettingsTextStyle"
            android:layout_marginVertical="0dp"
            android:fontFamily="@font/ys_display_medium"
            android:paddingStart="@dimen/margin_text"
            android:paddingTop="@dimen/margin_text"
            android:text="@string/search"
            android:textSize="@dimen/header_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/medium_padding"
        android:layout_marginVertical="@dimen/margin_vertical"
        android:background="@drawable/search_background">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/medium_margin_vertical"
            android:layout_marginStart="@dimen/medium_icon_padding"
            android:layout_marginEnd="@dimen/regular_icon_padding"
            android:src="@drawable/search"
            app:tint="?attr/colorOnPrimaryContainer" />

        <EditText
            android:id="@+id/input_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/ys_display_medium"
            android:hint="@string/search"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="?attr/colorOnSecondary"
            android:textColorHint="?attr/colorOnPrimaryContainer"
            android:textSize="@dimen/medium_text" />

        <ImageView
            android:id="@+id/clear_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/medium_icon_padding"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:visibility="gone"
            app:tint="?attr/colorOnPrimaryContainer" />

    </LinearLayout>
</LinearLayout>