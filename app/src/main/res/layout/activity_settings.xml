<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryVariant"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/return_back"
            style="@style/SettingsImageStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/medium_padding"
            android:src="@drawable/return_back"
            app:tint="?attr/colorSecondary" />

        <TextView
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_text"
            android:layout_marginTop="@dimen/medium_margin_text"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/settings"
            android:textSize="@dimen/header_text" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <TextView
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/padding_between_text"
            android:paddingStart="@dimen/medium_padding"
            android:text="@string/dark_theme" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginEnd="12dp"
            android:alpha="0.6"
            android:checked="false"
            android:theme="@style/BrandedSwitch.control" />
    </FrameLayout>

    <TextView
        android:id="@+id/share_app"
        style="@style/TextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/padding_between_text"
        android:paddingHorizontal="@dimen/medium_padding"
        android:text="@string/share_application"
        app:drawableEndCompat="@drawable/share"
        app:drawableTint="?attr/colorButtonNormal" />

    <TextView
        android:id="@+id/write_support"
        style="@style/TextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/padding_between_text"
        android:paddingHorizontal="@dimen/medium_padding"
        android:text="@string/write_support"
        app:drawableEndCompat="@drawable/support"
        app:drawableTint="?attr/colorButtonNormal" />

    <TextView
        android:id="@+id/terms_of_use"
        style="@style/TextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/padding_between_text"
        android:paddingHorizontal="@dimen/medium_padding"
        android:text="@string/terms_of_use"
        app:drawableEndCompat="@drawable/open_file"
        app:drawableTint="?attr/colorButtonNormal" />
</LinearLayout>