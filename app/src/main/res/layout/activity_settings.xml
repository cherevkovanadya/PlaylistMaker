<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding"
        android:paddingStart="@dimen/padding"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/return_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:padding="@dimen/icon_padding_settings"
            android:src="@drawable/return_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_text"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/margin_text"
            android:text="@string/settings"
            android:textColor="@color/black"
            android:textSize="@dimen/header_text" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="@dimen/medium_margin_text"
            android:layout_marginVertical="@dimen/margin_between_text"
            android:text="@string/dark_theme"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginEnd="12dp"
            android:alpha="0.6"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="@dimen/medium_margin_text"
            android:layout_marginVertical="@dimen/margin_between_text"
            android:text="@string/share_application"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginEnd="@dimen/icon_padding_settings"
            android:src="@drawable/share" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="@dimen/medium_margin_text"
            android:layout_marginVertical="@dimen/margin_between_text"
            android:text="@string/write_support"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginRight="@dimen/icon_padding_settings"
            android:src="@drawable/support" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="@dimen/medium_margin_text"
            android:layout_marginVertical="@dimen/margin_between_text"
            android:text="@string/terms_of_use"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginRight="@dimen/icon_padding_settings"
            android:src="@drawable/open_file" />
    </FrameLayout>
</LinearLayout>