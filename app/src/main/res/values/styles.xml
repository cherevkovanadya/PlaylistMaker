<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/header_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/regular_icon_padding</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="TextStyle">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="SettingsImageStyle">
        <item name="android:tint">?attr/colorButtonNormal</item>
    </style>
</resources>